<!-- views/pages/stats.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../include/head %>
</head>
<body class="container">

<header>
    <% include ../include/header %>
</header>

<main>
    <table class="table table-sm table-dark">
        <tbody>
            <% recent.forEach(post => { %>
                <tr><th scope="row"><strong><%= post.author %></strong></th><td><%= post.title %></td><td><%= post.url %></td><td><%= post.date %></td></tr>
            <% }); %>
        </tbody>
      </table>
</main>

<footer>
    <% include ../include/footer %>
</footer>

</body>
</html>