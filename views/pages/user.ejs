<!-- views/pages/stats.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../include/head %>
</head>
<body class="container">

<header>
    <% include ../include/header %>
</header>

<main>
    <table class="table table-sm table-dark">
        <tbody>
          <tr><th scope="row"><strong>ID</strong></th><td><%= id %></td></tr>
          <tr><th scope="row"><strong>Title</strong></th><td><%= title %></td></tr>
          <tr><th scope="row"><strong>Status</strong></th><td><%= status %></td></tr>
          <tr><th scope="row"><strong>Birthday</strong></th><td><%= birthday %></td></tr>
            <% blurb.forEach(item => { %>
                <tr><th scope="row"><strong><%= item.type %></strong></th><td><%= item.value %></td></tr>
            <% }); %>
            <% followBlock.forEach(item => { %>
                <tr><th scope="row"><strong><%= item.type %></strong></th><td><%= item.value %></td></tr>
            <% }); %>
        </tbody>
      </table>
</main>

<footer>
    <% include ../include/footer %>
</footer>

</body>
</html>